{
  "name": "@llmbase/mcp-servers",
  "version": "1.0.0",
  "description": "Production-ready Model Context Protocol (MCP) servers built with Hono.js and deployed on Cloudflare Workers. Extend Claude's capabilities with web scraping, content fetching, and more.",
  "license": "MIT",
  "repository": "https://github.com/llmbaseai/mcp-servers",
  "exports": {
    ".": "./jsr-mod.ts",
    "./web-fetch": "./servers/web-fetch/src/standalone-jsr.ts"
  },
  "publish": {
    "include": [
      "jsr-mod.ts",
      "servers/web-fetch/src/standalone-jsr.ts",
      "servers/web-fetch/src/services/web-fetcher-jsr.ts",
      "servers/web-fetch/src/utils/html-processor-jsr.ts",
      "servers/web-fetch/src/types.ts",
      "servers/web-fetch/README.md",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "packages/**",
      "src/**",
      "dist/**"
    ]
  }
}