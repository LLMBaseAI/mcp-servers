{
  "name": "@llmbase/mcp-core",
  "version": "1.0.0",
  "description": "Core functionality for LLM Base MCP servers",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./base": {
      "types": "./dist/base-server.d.ts",
      "import": "./dist/base-server.js",
      "default": "./dist/base-server.js"
    },
    "./sse": {
      "types": "./dist/sse-service.d.ts",
      "import": "./dist/sse-service.js",
      "default": "./dist/sse-service.js"
    },
    "./registry": {
      "types": "./dist/registry.d.ts",
      "import": "./dist/registry.js",
      "default": "./dist/registry.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "core",
    "base-server",
    "typescript"
  ],
  "author": {
    "name": "LLM Base",
    "url": "https://mcp.llmbase.ai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/llmbaseai/mcp-servers.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/llmbaseai/mcp-servers/issues"
  },
  "homepage": "https://mcp.llmbase.ai",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@llmbase/mcp-shared": "workspace:*",
    "workers-mcp": "^0.0.13",
    "@cloudflare/workers-types": "^4.20241218.0"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  }
}